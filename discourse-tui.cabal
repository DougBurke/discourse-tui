                       cursor,
                       aeson,
                       http-conduit,
                       vty,
                       containers,
                       vector,
                       pandoc,
                       text,
                       lens,
                       directory >= 1.2.3,
                       bytestring == 0.10.*,
                       formatting >= 7.1 && < 7.3,
                       process == 1.6.*,
                       time == 1.9.*

  -- Directories containing source files.
  hs-source-dirs:      src

  -- Base language which the package is written in.
  default-language:    Haskell2010
  ghc-options: -Wall -threaded

